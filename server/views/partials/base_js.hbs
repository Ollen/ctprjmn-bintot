{{!-- Set sidebar link --}}
<script>
    let navLinks = $('a.nav-link');
    for (let i = 0; i < navLinks.length; i++) {
        if ($(navLinks[i]).attr('href') == window.location.pathname) {
            $(navLinks[i]).parent('.nav-item').addClass('active');
        }
    }
</script>