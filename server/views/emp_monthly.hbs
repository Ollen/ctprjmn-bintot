<!DOCTYPE html>
<html lang="en">
<head>
    {{!-- CSS Files --}}
    {{> base_css}}
    <link rel="stylesheet" href="/scripts/bootstrap-table/dist/bootstrap-table.min.css">
    
    <title>Bintot â€” {{title}}</title>
</head>

<body>
    <div class="wrapper">
        {{> dash_sidebar}}
        <div class="main-panel">
            {{> dash_navbar}}
            <div class="content">
                <div class="container">
                    <div class="row bg-white border border-primary rounded p-3">

                            <div class="table-responsive">
                                <h4 class="mt-3"><strong>Top Ten Employee of the Month</strong></h4>
                                <table id="month-employee" class="table">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>Employee ID</th>
                                            <th>First Name</th>
                                            <th>Last Name</th>
                                            <th>Times Cleaned</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        
                    </div>
                    <div class="row bg-white border border-primary rounded p-3 mt-3">

                            <div class="table-responsive">
                                <h4 class="mt-3"><strong>Best Employee per Month</strong></h4>
                                <table id="monthly-employee" class="table">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>Employee ID</th>
                                            <th>First Name</th>
                                            <th>Last Name</th>
                                            <th>Times Cleaned</th>
                                            <th>Month</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
    {{!-- JS Files --}}
    {{> base_js}}
    <script src="/scripts/bootstrap-table/dist/bootstrap-table.min.js"></script>    
    <script>
        let data = {{{json data}}}
            let $month_employee = $('#month-employee');
            $month_employee.bootstrapTable({
                data: data.topTenEmployee,
                classes: "table",
                columns: [{
                    field: "employee_id",
                    name: "Employee ID",
                    sortable: true
                }, {
                    field: "first_name",
                    name: "Firstname",
                    sortable: true                
                }, {
                    field: "last_name",
                    name: "Lastname",
                    sortable: true                
                }, {
                    field: "times_cleaned",
                    name: "Times Cleaned",
                    sortable: true                
                }],
                search: true,
                pagination: true
            });

            let $monthly_employee = $('#monthly-employee');
            $monthly_employee.bootstrapTable({
                data: data.bestEmployeePerMonth,
                classes: "table",
                columns: [{
                    field: "employee_id",
                    name: "Employee ID",
                    sortable: true
                }, {
                    field: "first_name",
                    name: "Firstname",
                    sortable: true                
                }, {
                    field: "last_name",
                    name: "Lastname",
                    sortable: true                
                }, {
                    field: "times_cleaned",
                    name: "Times Cleaned",
                    sortable: true                
                }, {
                    field: "month",
                    name: "Month",
                    sortable: true                
                }],
                search: true,
                pagination: true
            });
    </script>    
</html>
